<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Main"
    android:background="#2196F3"
    android:nestedScrollingEnabled="false">


    <Button
        android:id="@+id/buttonCreate"
        android:text="Create"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="6"
        android:shadowRadius="25"
        android:layout_above="@+id/buttonLoad"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_add_circle_outline_white_24dp"
        android:drawableStart="@drawable/ic_add_circle_outline_white_24dp"
        android:paddingStart="25dp"
        android:paddingEnd="60dp"
        android:paddingLeft="25dp"
        android:paddingRight="60dp" />


    <Button
        android:id="@+id/buttonLoad"
        android:text="Load"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="6"
        android:shadowRadius="25"
        android:layout_above="@+id/buttonShare"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_open_in_new_white_24dp"
        android:drawableStart="@drawable/ic_open_in_new_white_24dp"
        android:paddingStart="25dp"
        android:paddingEnd="60dp"
        android:paddingLeft="25dp"
        android:paddingRight="95dp"/>

    <Button
        android:id="@+id/buttonShare"
        android:text="Share"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="6"
        android:shadowRadius="25"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonLoad"
        android:layout_alignStart="@+id/buttonLoad"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:drawableLeft="@drawable/ic_question_answer_white_24dp"
        android:drawableStart="@drawable/ic_question_answer_white_24dp"
        android:paddingStart="25dp"
        android:paddingEnd="60dp"
        android:paddingLeft="25dp"
        android:paddingRight="80dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="195dp"
        android:id="@+id/imageView"
        android:background="@drawable/gyg_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
