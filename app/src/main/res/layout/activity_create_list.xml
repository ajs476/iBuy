<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/CreateList"
    android:background="#2196F3">

    <ListView
        android:id="@+id/custom_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="2dp"
        android:background="#ffffff"
        android:layout_above="@+id/button"
        android:layout_below="@+id/buttonSaveList"
        android:paddingTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddItem"
        android:textColorHint="#FFFFFF"
        android:hint="@string/name_hint"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonAddItem"
        android:layout_toStartOf="@+id/buttonAddItem"
        android:paddingLeft="10dp"
        android:visibility="invisible"
        android:text="List Preview" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Item"
        android:id="@+id/buttonAddItem"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="6"
        android:shadowRadius="25"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="18dp"
        android:drawableLeft="@drawable/ic_create_white_24dp"
        android:drawableStart="@drawable/ic_create_white_24dp"
        android:paddingLeft="25dp"
        android:paddingRight="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSaveList"
        android:background="@drawable/ic_save_white_24dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="6"
        android:shadowRadius="25"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minWidth="55dp"
        android:minHeight="55dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonClearList"
        android:background="@drawable/ic_delete_white_24dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="6"
        android:shadowRadius="25"
        android:textColor="#ffffff"
        android:minWidth="55dp"
        android:minHeight="55dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonSaveList"
        android:layout_toStartOf="@+id/buttonSaveList"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddAmount"
        android:textColorHint="#FFFFFF"
        android:hint="@string/amount_hint"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/editTextAddItem"
        android:layout_alignLeft="@+id/editTextAddItem"
        android:layout_alignStart="@+id/editTextAddItem"
        android:layout_toLeftOf="@+id/buttonAddItem"
        android:layout_toStartOf="@+id/buttonAddItem"
        android:paddingLeft="10dp"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCategory"
        android:textColorHint="#FFFFFF"
        android:hint="@string/category_hint"
        android:focusable="false"
        android:clickable="false"
        android:textColor="#ffffff"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/editTextAddAmount"
        android:layout_alignLeft="@+id/editTextAddAmount"
        android:layout_alignStart="@+id/editTextAddAmount"
        android:layout_alignRight="@+id/editTextAddAmount"
        android:layout_alignEnd="@+id/editTextAddAmount"
        android:paddingLeft="10dp"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#2196F3"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/custom_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Creation"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="36dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp" />

</RelativeLayout>